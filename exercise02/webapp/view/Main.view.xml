            <Text id="selectOp" text=""/>
             <Select id="idSelect" width="auto" items="{/ops}">
                <core:ListItem 
                id = "idListItem" 
                key = "{/text}" 
                text="{/text}">
                </core:ListItem>
            </Select>
            <Input id="num2" placeholder="두 번째 숫자 입력" width="10%"/>
            <Button id="result" text="계산하기" press="onCal"/>
             
        </content>
    </Page>
</mvc:View>


